{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "build",
		"lib": [
			"ES2020", "DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"experimentalDecorators": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"**/*.test.ts",
		"vitest.config.ts"
	]
}